<Page x:Class="LibraryManagementWPF.PersonInfo"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:LibraryManagementWPF"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PersonInfo" Height="650" Width="1200" Background="#ece6ff">
    <Grid>
        <Button Content="Выдать" HorizontalAlignment="Left" Margin="60,78,0,0" VerticalAlignment="Top" 
        RenderTransformOrigin="-1.174,-0.549" Click="ButtonGiveOut_Click" Height="30" Width="100" 
        Foreground="#160066" Background="#d7ccff"/>
        <Button Content="Вернуть" HorizontalAlignment="Left" Margin="60,154,0,0" VerticalAlignment="Top" 
        RenderTransformOrigin="-1.174,-0.549" Click="ButtonReturnBook_Click" Height="30" Width="100" 
        Foreground="#160066" Background="#d7ccff"/>
        <TextBox HorizontalAlignment="Left" Margin="238,80,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" 
         Name ="TextBoxLastName" Background="White" PreviewTextInput="TextBox_PreviewIdInput"/>
        <TextBox HorizontalAlignment="Left" Margin="424,80,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" 
         Name ="TextBoxFirstName" Background="White"/>
        <TextBox HorizontalAlignment="Left" Margin="624,78,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" 
         Name ="TextBoxPatronym" Background="White" PreviewTextInput="TextBox_PreviewYearInput"/>
        <TextBox HorizontalAlignment="Left" Margin="624,159,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" 
         Name ="TextBoxGiveReturn" Background="White" PreviewTextInput="TextBox_PreviewQntInput"/>
        <TextBox HorizontalAlignment="Left" Margin="238,159,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" 
        Name ="TextBoxGiveGiveOut" Background="White" PreviewTextInput="TextBox_PreviewQntInput"/>
        <ListView x:Name="PersonListView" SelectionChanged="PersonListView_SelectionChanged" Margin="0,225,0,172">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Фамилия" DisplayMemberBinding="{Binding LastName}" Width="150"/>
                    <GridViewColumn Header="Имя" DisplayMemberBinding = "{Binding FirstName}" Width="100"/>
                    <GridViewColumn Header="Отчество" Width="120" DisplayMemberBinding = "{Binding Patronym}"/>
                    <GridViewColumn Header="Id" DisplayMemberBinding = "{Binding IdBook}" Width="75"/>
                    <GridViewColumn Header="Количество" DisplayMemberBinding = "{Binding QuantityBook}" Width="140"/>
                    <GridViewColumn Header="Выдача" DisplayMemberBinding = "{Binding GiveOutDate}" Width="115"/>
                    <GridViewColumn Header="Возврат" DisplayMemberBinding = "{Binding ReturnDate}" Width="115"/>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Page>
