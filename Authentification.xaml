<Page x:Class="LibraryManagementWPF.Authentification"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:LibraryManagementWPF"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Authentification">

    <Grid Background="#ece6ff">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300*"></ColumnDefinition>
            <ColumnDefinition Width="200*"></ColumnDefinition>
            <ColumnDefinition Width="300*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="110*"></RowDefinition>
            <RowDefinition Height="60*"></RowDefinition>
            <RowDefinition Height="60*"></RowDefinition>
            <RowDefinition Height="60*"></RowDefinition>
            <RowDefinition Height="60*"></RowDefinition>
            <RowDefinition Height="100*"></RowDefinition>
        </Grid.RowDefinitions>
        <Label Content="Авторизация" Width="120" FontSize="18" Height="32" Grid.Column="1" Foreground="#160066" Margin="40,55,40,23"/>

        <TextBox x:Name="TextBoxLogin" Grid.Row="2" Grid.Column="1" Margin="0,0,0,30"/>
        <PasswordBox x:Name="TextBoxPassword" Grid.Row="3" Grid.Column="1" Margin="0,30,0,0"/>

        <Button Content="Войти" Grid.Row="4" Grid.Column="1" Click="ButtonEnterAuthorization_Click" Height="32" Margin="0,38,0,0" VerticalAlignment="Top" Grid.RowSpan="2"/>
        <Label Content="Имя пользователя" HorizontalAlignment="Left" Margin="65,10,0,0" Grid.Row="1" VerticalAlignment="Top" Width="170" FontSize="18" Grid.Column="1" Foreground="#160066" Grid.ColumnSpan="2"/>
        <Label Grid.Column="1" Content="Пароль" HorizontalAlignment="Center" Grid.Row="3" VerticalAlignment="Top" FontSize="18" Foreground="#160066"/>
    </Grid>
</Page>
